<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Acitivities.ConnectingActivity">

    <RelativeLayout
        android:id="@+id/calling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            app:civ_border_width="5sp"
            app:civ_border_color="@color/orange"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:src="@drawable/profile_pic"
            android:layout_marginTop="50sp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Receiver Name"
            android:layout_below="@id/profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:textSize="16sp"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:text="Calling..." />

        <LinearLayout
            android:gravity="center"
            android:background="@drawable/curve_background"
            android:backgroundTint="@android:color/secondary_text_light"
            android:id="@+id/controls_caller"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/mic_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp"
                android:background="@drawable/circle_background"
                app:backgroundTint="@color/cardview_dark_background"
                app:srcCompat="@drawable/ic_baseline_mic_off_24" />
            <ImageView
                android:id="@+id/video_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp"
                android:background="@drawable/circle_background"
                app:backgroundTint="@color/cardview_dark_background"
                app:srcCompat="@drawable/ic_baseline_videocam_off_24" />
            <ImageView
                android:id="@+id/end_call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp"
                android:background="@drawable/circle_background"
                app:backgroundTint="@android:color/holo_red_dark"
                app:srcCompat="@drawable/ic_baseline_call_end_24" />
            <ImageView
                android:id="@+id/switch_camera_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp"
                android:background="@drawable/circle_background"
                app:backgroundTint="@color/cardview_dark_background"
                app:srcCompat="@drawable/ic_baseline_cameraswitch_24" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recievingCall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/recprofile"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50sp"
            android:src="@drawable/profile_pic"
            app:civ_border_color="@color/orange"
            app:civ_border_width="5sp" />

        <TextView
            android:id="@+id/callername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recprofile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:text="Caller Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/callername"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:text="Incoming Calling..."
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/controls1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/circle_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp"
                app:backgroundTint="#33a867"
                app:srcCompat="@drawable/baseline_call" />

            <ImageView
                android:id="@+id/reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/circle_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp"
                app:backgroundTint="@android:color/holo_red_dark"
                app:srcCompat="@drawable/ic_baseline_call_end_24" />

        </LinearLayout>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/callLayout"
            android:visibility="gone"
            android:layout_height="match_parent">

            <org.webrtc.SurfaceViewRenderer
                android:id="@+id/remote_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <org.webrtc.SurfaceViewRenderer
                android:id="@+id/local_view"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_above="@+id/controls"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="16dp" />

            <LinearLayout
                android:gravity="center"
                android:background="@drawable/curve_background"
                android:backgroundTint="@android:color/secondary_text_light"
                android:id="@+id/controls"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/mic_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    android:background="@drawable/circle_background"
                    app:backgroundTint="@color/cardview_dark_background"
                    app:srcCompat="@drawable/ic_baseline_mic_off_24" />
                <ImageView
                    android:id="@+id/video_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    android:background="@drawable/circle_background"
                    app:backgroundTint="@color/cardview_dark_background"
                    app:srcCompat="@drawable/ic_baseline_videocam_off_24" />
                <ImageView
                    android:id="@+id/end_call_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    android:background="@drawable/circle_background"
                    app:backgroundTint="@android:color/holo_red_dark"
                    app:srcCompat="@drawable/ic_baseline_call_end_24" />
                <ImageView
                    android:id="@+id/switch_camera_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    android:background="@drawable/circle_background"
                    app:backgroundTint="@color/cardview_dark_background"
                    app:srcCompat="@drawable/ic_baseline_cameraswitch_24" />
            </LinearLayout>
        </RelativeLayout>

</RelativeLayout>