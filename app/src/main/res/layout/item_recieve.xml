<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8sp"
        android:background="@drawable/reciver_back"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="8sp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_margin="5sp"
            android:src="@drawable/profile_pic"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:visibility="gone">
            <ImageView
                android:id="@id/video"
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:src="@drawable/profile_pic" />
            <Button
                android:id="@+id/button"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:background="@drawable/baseline_play_arrow_24"></Button>
        </FrameLayout>

        <TextView
            android:id="@+id/rec_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/reciver_back"
            android:paddingStart="5sp"
            android:paddingTop="5sp"
            android:paddingEnd="10sp"
            android:paddingBottom="5sp"
            android:text="sjfljdlslsgjksfk"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/document"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageDocumentIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/file"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:id="@+id/layoutDocumentInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imageDocumentIcon"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/textDocumentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Name"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textDocumentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Type"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/feeling"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linear"
        android:layout_alignBottom="@+id/linear"
        android:layout_marginStart="-18dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-18dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/linear"
        app:srcCompat="@android:drawable/ic_menu_save" />


</RelativeLayout>